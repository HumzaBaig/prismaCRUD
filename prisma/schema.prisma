// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  fname    String
  lname    String
  car      Car?
  CarBlogs CarBlogs[]
}

model Car {
  id     String  @id @default(cuid())
  color  String
  bought Boolean @default(false)
  name   String
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
}

model CarBlog {
  id         String                 @id @default(cuid())
  content    String
  createdAt  DateTime               @default(now())
  userId     String
  user       User                   @relation(fields: [userId], references: [id])
  categories CategoriesOnCarBlogs[]
}

model CategoryCarBlogs {
  id       String                 @id @default(cuid())
  name     String
  carBlogs CategoriesOnCarBlogs[]
}

model CategoriesOnCarBlogs {
  carBlogId  String
  carBlogs   CarBlog          @relation(fields: [carBlogId], references: [id])
  categoryId String
  categories CategoryCarBlogs @relation(fields: [categoryId], references: [id])
  assignedAt DateTime         @default(now())
  assignedBy String

  @@id([carBlogId, categoryId])
}
